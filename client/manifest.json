{
	"manifest_version" : 2,
	"background" : { 
		"scripts": ["js/bg.js"],
		"persistent": true
	 },
	"browser_action" : {
		"default_icon": "img/spoticon.png",
		"default_title" : "DJify"
		// "default_popup" : "html/popup.html"
	},
	"description": "Play music in spotify, together.",
	"icons": {
		"128": "img/spoticon.png",
		"48": "img/spoticon.png"
	},
	"name" : "DJify",
	"options_page": "html/options.html",
	"permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
	"version": "0.1"
}